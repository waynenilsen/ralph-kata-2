model Comment {
  id        String   @id @default(cuid())
  content   String
  todo      Todo     @relation(fields: [todoId], references: [id], onDelete: Cascade)
  todoId    String
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  createdAt DateTime @default(now())

  @@index([todoId])
  @@index([authorId])
}
